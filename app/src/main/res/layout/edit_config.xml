<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditConfig">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="10"
        android:text="First four bytes of serial number:"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/serial_byte1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="2"
        android:ems="2"
        android:layout_row="1"
        android:layout_column="0"
        android:digits="0123456789ABCDEF"
        android:inputType="textCapCharacters"
        android:hint="AA"
        android:textSize="@dimen/serial_number_text_size"/>
    <EditText
        android:id="@+id/serial_byte2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="2"
        android:ems="2"
        android:layout_row="1"
        android:layout_column="1"
        android:digits="0123456789ABCDEF"
        android:inputType="textCapCharacters"
        android:hint="BB"
        android:textSize="@dimen/serial_number_text_size"/>
    <EditText
        android:id="@+id/serial_byte3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="2"
        android:ems="2"
        android:layout_row="1"
        android:layout_column="2"
        android:digits="0123456789ABCDEF"
        android:inputType="textCapCharacters"
        android:hint="CC"
        android:textSize="@dimen/serial_number_text_size"/>
    <EditText
        android:id="@+id/serial_byte4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="2"
        android:ems="2"
        android:layout_row="1"
        android:layout_column="3"
        android:digits="0123456789ABCDEF"
        android:inputType="textCapCharacters"
        android:hint="DD"
        android:textSize="@dimen/serial_number_text_size"/>
    <Button
        android:id="@+id/Flash"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="10"
        android:text="Flash"
        android:textSize="25sp"
        android:background="#00ff00"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="10"
        android:text="Output:"
        android:textSize="23sp"/>
    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scrollbars="vertical"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="10"
        android:fillViewport="true">

        <TextView
            android:id="@+id/output"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"/>
    </ScrollView>
    <Button
        android:id="@+id/Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="10"
        android:layout_gravity="center_horizontal"
        android:text="Clear Output Area" />
</GridLayout>
